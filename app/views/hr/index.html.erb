<% include_calendar_headers_tags if defined? include_calendar_headers_tags %>
<style type="text/css">
  select-field {
    margin-bottom: 10px;
    display: inline-block;
    margin-right: 10px;
  }

  select-field select {
    margin: 0;
    vertical-align: top;
  }

  select-field label {
    display: inline-block;
    line-height: 24px;
    margin-right: 10px;
  }
  #main {
    position: relative;
  }
  loader {
    position: absolute;
    vertical-align: middle;
    text-align: center;
    background: rgba(30,30,30,0.85);
    border-radius: 5px;
    bottom: 0;
    right: 0;
    left: 0;
    top: 0;
  }

  loader:before {
    content: "LOADING...";
    position: absolute;
    top: 40%;
    left: 0;
    right: 0;
    font-weight: bold;
    font-size: 30px;
    color: #fff;
  }
</style>
<script type="text/javascript">
  window.CurrentUser = {
    id: <%= User.current.id %>,
    admin: <%= User.current.role == :admin %>,
    supervisor: <%= User.current.supervisor? %>,
    profile: <%= User.current.hr_employee_profile.to_json.html_safe %>
  }
</script>
<% if Rails.env.development? || Rails.env.test? %>
  <%= javascript_include_tag '/hr_assets/assets/hr' %>
<% else %>
  <%= javascript_include_tag 'hr.js', plugin: 'redmine_hr' %>
<% end %>

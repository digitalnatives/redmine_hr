<style type="text/css">
  select-field {
    margin-bottom: 10px;
    display: inline-block;
    margin-right: 10px;
  }

  select-field select {
    margin: 0;
    vertical-align: top;
  }

  select-field label {
    display: inline-block;
    line-height: 24px;
    margin-right: 10px;
  }
</style>
<script type="text/javascript">
  window.CurrentUser = {
    id: <%= User.current.id %>,
    admin: <%= User.current.admin? %>,
    profile: <%= User.current.hr_employee_profile.to_json.html_safe %>
  }
</script>
<% if Rails.env.development? || Rails.env.test? %>
  <%= javascript_include_tag '/hr_assets/assets/hr' %>
<% else %>
  <%= javascript_include_tag 'hr.js', plugin: 'remdine_hr' %>
<% end %>

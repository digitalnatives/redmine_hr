%h2
  = t "hr.holiday_request.title"
  - unless self.dirty?
    = " ##{self.id}"
%form
  .box.tabular
    %p
      %label= t "hr.holiday_request.start_date"
      %input(type="date" name="start_date" style="width: 99%" value="#{self.start_date}")
    %p
      %label= t "hr.holiday_request.end_date"
      %input(type="date" name="end_date" style="width: 99%" value="#{self.end_date}")
    %p
      %label= t "hr.holiday_request.half_day"
      %input{type: "checkbox", checked: self.half_day}
    %p
      %label= t "hr.holiday_request.status"
      %select
        %option(value="planned")= t("hr.holiday_request.statuses.planned")
        %option(value="planned")= t("hr.holiday_request.statuses.requested")
        %option(value="planned")= t("hr.holiday_request.statuses.approved")
        %option(value="planned")= t("hr.holiday_request.statuses.withdrawn")
        %option(value="planned")= t("hr.holiday_request.statuses.rejected")
    %p
      %label= t "hr.holiday_request.type"
      %select
        %option(value="holiday")= t("hr.holiday_request.holiday")
        %option(value="sick_leave")= t("hr.holiday_request.sick_leave")
  - if self.dirty?
    %button(name="save")= t "hr.labels.create"
  - else
    %button(name="save")= t "hr.labels.save"
